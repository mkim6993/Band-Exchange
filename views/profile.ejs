            <div id="postEditorContainer">
                <div id="editorExit">
                    <div id="exitBtn" onclick="hideEditor(event)">x</div>
                </div>
                <form id="editorForm" method="post" action="/profile/saveEdit">
                    <input id="boring" style="display: none" name="boring" />
                    <textarea
                        id="editTitle"
                        class="editText"
                        name="editTitle"
                    ></textarea>
                    <div id="smallerInputContainer">
