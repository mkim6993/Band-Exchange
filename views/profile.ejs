                <div id="profilePicName">
                    <img
                        src="./images/bubble.jpeg"
                        alt="image for project"
                        width="80px"
                        height="80px"
                        id="profilePic"
                    />
                    <div id="userProfile"><%= username %></div>
                    <div id="totalPosts"><%= userDetails.numPosts %> posts</div>
